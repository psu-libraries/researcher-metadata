<% if render_link? %>
  <%= link_to path, class: 'card-link' do %>
    <div class="card" id="<%= card_id %>">
      <div class='card-header'><strong><%= i18n(title) %></strong>
        <span class="float-right text-large"><strong><%= count %></strong></span>
      </div>
      <div class='card-body'><%= i18n(description) %></div>
    </div>
  <% end %>
<% else %>
  <div class="card text-muted" id="<%= card_id %>">
    <div class='card-header'><strong><%= i18n(title) %></strong>
      <span class="float-right text-large">0</span>
    </div>
    <div class='card-body'><%= i18n(description) %></div>
  </div>
<% end %>
