<div class="container pt-4 pb-5">
  <%= link_to '<< Back', activity_insight_oa_workflow_path %>
  <h1 class="pb-3 pt-2">Publications With No Known File Version</h1>
  <div class='card'>
  <table class="table">
    <thead class='card-header'>
      <tr>
        <th>Title</th>
        <th>Files</th>
        <th>Version Status</th>
      </tr>
    </thead>
    <tbody class='card-body'>
      <% @publications.each do |p| %>
        <tr id="<%= dom_id(p) %>">
          <td rowspan=<%= p.activity_insight_oa_files.count %>><%= p.title %></td>
            <% p.activity_insight_oa_files.each_with_index do |file, index| %>
            <%= '<tr>'.html_safe unless index == 0 %>
            <td>
              <%= file.location %>
            </td>
            <td>
              <%= file.version %>
            </td>
            </tr>
            <% end %>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
