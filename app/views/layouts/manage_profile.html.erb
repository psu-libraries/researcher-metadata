<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'manage_profile', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'bundle', 'data-turbolinks-track': 'reload' %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <nav class="profile-header">
    <h1>Researcher Metadata Database</h1>
    <ul>
      <li><a href="https://libraries.psu.edu/" target="_blank">University Libraries</a></li>
    </ul>
  </nav>

  <%= render '/shared/masquerade_navbar' if current_user.masquerading? %>

  <nav class="navbar navbar-expand-lg navbar-light manage-profile-nav">
    <span class="navbar-brand"><%= image_tag('logo.png', alt: "Penn State", class: 'logo') %></span>
    <ul class="navbar-nav me-auto">
      <li class="nav-item<%= ' active' if action_name == 'bio' %>"><%= link_to t(".nav.bio"), profile_bio_path, class: 'nav-link' %></li>
      <li class="nav-item<%= ' active' if action_name == 'edit_publications' %>"><%= link_to t(".nav.publications"), edit_profile_publications_path, class: 'nav-link' %></li>
      <li class="nav-item<%= ' active' if action_name == 'edit_presentations' %>"><%= link_to t(".nav.presentations"), edit_profile_presentations_path, class: 'nav-link' %></li>
      <li class="nav-item<%= ' active' if action_name == 'edit_performances' %>"><%= link_to t(".nav.performances"), edit_profile_performances_path, class: 'nav-link' %></li>
      <li class="nav-item<%= ' active' if action_name == 'edit_other_publications' %>"><%= link_to t(".nav.other_works"), edit_profile_other_publications_path, class: 'nav-link' %></li>
    </ul>
    <ul class="navbar-nav ms-auto">
      <li class="nav-item"><%= link_to t(".nav.home"), root_path, class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to t(".nav.public_profile"), profile_path(webaccess_id: current_user.webaccess_id), class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to t(".nav.deputies"), deputy_assignments_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to t(".nav.support"), 'mailto:L-FAMS@lists.psu.edu?subject=Researcher Metadata Database Profile Support', target: '_blank', class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to t(".nav.sign_out"), destroy_user_session_path, class: "nav-link" %></li>
    </ul>
  </nav>
  <%= render partial: 'shared/flash_notice' %>
  <%= render partial: 'shared/flash_alert' %>
  <div class="container">
    <div class="row">
      <div class="col">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
