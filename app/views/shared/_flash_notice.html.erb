<% if flash[:notice].present? %>
      <section>
        <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
          </button>
          <%= flash[:notice] %>
        </div>
      </section>
    <% end %>